<div>
  <%= flash[:notice] %>
</div>
<p></p>
<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
  <% error_message = @book.errors.count == 1 ? "#{@book.errors.count} error" : "#{@book.errors.count} errors" %>
  <h3><%= error_message %> prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'new', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= link_to user_path(books.user_id) do %>
            <%= image_tag books.user.get_profile_image(100,100) %></td>
            <% end %>
            <td><%= link_to book_path(books.id) do %>
            <%= books.title %></td>
            <% end %>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>